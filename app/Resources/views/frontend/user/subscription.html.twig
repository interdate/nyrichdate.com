    <script>
        function pageInit(){}
        jQuery(document).ready(function ($) {
            pageInit();

           $('.subscription').click(function () {
               if(!$(this).find('.chackbox').hasClass('click')){
                   $(this).parents('.subscriptions').find('.chackbox').removeClass('click');
                   $(this).find('.chackbox').addClass('click');
               }
           });
        });
        function payment(str){
            var form = $('#pp');
            switch(str){
                case 1:
                    form.find('input[name="a3"]').val('1560.00');
                    form.find('input[name="p3"]').val('1');
                    form.find('input[name="t3"]').val('Y');
                    form.find('input[name="custom"]').val('{{ app.user }}_1');
                    break;
                case 2:
                    form.find('input[name="a3"]').val('900.00');
                    form.find('input[name="p3"]').val('6');
                    form.find('input[name="t3"]').val('M');
                    form.find('input[name="custom"]').val('{{ app.user }}_2');
                    break;
                case 3:
                    form.find('input[name="a3"]').val('499.00');
                    form.find('input[name="p3"]').val('3');
                    form.find('input[name="t3"]').val('M');
                    form.find('input[name="custom"]').val('{{ app.user }}_3');
                    break;
                case 4:
                    form.find('input[name="a3"]').val('99.00');
                    form.find('input[name="p3"]').val('1');
                    form.find('input[name="t3"]').val('M');
                    form.find('input[name="custom"]').val('{{ app.user }}_4');
                    break;
                case 5:
                    form.find('input[name="a3"]').val('69.00');
                    form.find('input[name="p3"]').val('2');
                    form.find('input[name="t3"]').val('W');
                    form.find('input[name="custom"]').val('{{ app.user }}_5');
                    break;
            }
            form.submit();
            //addLoader();

            //$('.payStep1').hide();
            //$('.payStep2').show();
            //$('h2.h2payment').text('Choose a payment method');
        }
