{% extends "backend/layout.html.twig" %}

{% block content %}

    {{ include('backend/header.html.twig', { 'header': 'Manage Users', 'icon': 'users' }) }}
    <script>
        jQuery(document).ready(function ($) {
            $('#admin_advanced_search_gender').change(function () {
                if($(this).val() == 1){
                    $('.phone-activate').removeClass('hidden');
                }else if(!$('.phone-activate').hasClass('hidden')){
                    $('.phone-activate').addClass('hidden');
                }
            });
        });
    </script>

    <div class="page_content">

        <div class="ui segment right advanced_search">

            <h2 class="ui header">
                <i class="search icon"></i>
                <div class="content">
                    Advanced Search
                </div>
            </h2>


            <form action="{{ path('admin_users', {'filter':'search'}) }}" method="post" id="advanced_search_form">



                <div class="buttonCont">
                    <div class="ui one column centered grid">
                        <button class="ui red big button" onclick="$(this).siblings('input[type=submit]').click();">Search</button>
                    </div>
                </div>



                <div class="ui form">

                    <a class="ui orange big ribbon label">
                        <div class="ui tiny buttons region_or_zip_code">
                            <div class="ui button red">
                                Area
                                <input type="hidden" value="region">
                            </div>
                            <div class="or"></div>
                            <div class="ui button">
                                Zip Code
                                <input type="hidden" value="zip_code">

                            </div>
                        </div>
                    </a>

                    <div class="region_block">

                        <div class="block">
                            {% for region in form.region %}
                                <div class="ui checkbox three region">
                                    {{ form_widget(region) }}
                                    {{ form_label(region) }}
                                </div>
                            {% endfor %}
                        </div>

                        <a class="ui orange big ribbon label hidden area">Neighborhood</a>
                        <div class="areas"></div>

                        <a class="ui orange big ribbon label hidden zipCode">Zip Code</a>
                        <div class="zipCodes"></div>

                    </div>

                    <div class="clear"></div>

                    <div class="zip_code_block hidden">
                        <div class="block">
                            <div class="left pair">

                                {{ form_widget(form.zipCodeSingle) }}

                                <input type="text" id="zip_code_autocomp">

                                {#<select class="ui search dropdown">
                                    {% for zipCode in zipCodes %}
                                        <option value="{{ zipCode.id }}">{{ zipCode.name }}</option>
                                    {% endfor %}
                                </select>#}
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.ageFrom) }}</a>
                    <div class="block">
                        <div class="left pair">{{ form_widget(form.ageFrom) }}</div>
                        <div class="left pair"> to-</div>
                        <div class="left pair">{{ form_widget(form.ageTo) }}</div>
                        <div class="clear"></div>
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.gender) }}</a>
                    <div class="block">
                        <div class="left pair">{{ form_widget(form.gender) }}</div>
                        <div class="clear"></div>
                    </div>

                    <div class="hidden phone-activate">
                        <a class="ui orange big ribbon label">{{ form_label(form.isActivated) }}</a>
                        <div class="block">
                            <div class="left pair">{{ form_widget(form.isActivated) }}</div>
                            <div class="clear"></div>
                        </div>
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.status) }}</a>
                    <div class="block">
                        {% for status in form.status %}
                            <div class="ui checkbox three">
                                {{ form_widget(status) }}
                                {{ form_label(status) }}
                            </div>
                        {% endfor %}
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.netWorth) }}</a>
                    <div class="block">
                        {% for netWorth in form.netWorth %}
                            <div class="ui checkbox three">
                                {{ form_widget(netWorth) }}
                                {{ form_label(netWorth) }}
                            </div>
                        {% endfor %}
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.income) }}</a>
                    <div class="block">
                        {% for income in form.income %}
                            <div class="ui checkbox three">
                                {{ form_widget(income) }}
                                {{ form_label(income) }}
                            </div>
                        {% endfor %}
                    </div>


                    <a class="ui orange big ribbon label">Height</a>
                    <div class="block">
                        <div class="left pair">{{ form_widget(form.heightFrom) }}</div>
                        <div class="left pair">to-</div>
                        <div class="left pair">{{ form_widget(form.heightTo) }}</div>
                        <div class="clear"></div>
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.body) }}</a>
                    <div class="block">
                        {% for body in form.body %}
                            <div class="ui checkbox four">
                                {{ form_widget(body) }}
                                {{ form_label(body) }}
                            </div>
                        {% endfor %}
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.features) }}</a>
                    <div class="block">
                        {% for feature in form.features %}
                            <div class="ui checkbox four">
                                {{ form_widget(feature) }}
                                {{ form_label(feature) }}
                            </div>
                        {% endfor %}
                    </div>


                    <a class="ui orange big ribbon label">{{ form_label(form.relationshipStatus) }}</a>
                    <div class="block">
                        {% for relationshipStatus in form.relationshipStatus %}
                            <div class="ui checkbox four">
                                {{ form_widget(relationshipStatus) }}
                                {{ form_label(relationshipStatus) }}
                            </div>
                        {% endfor %}
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.education) }}</a>
                    <div class="block">
                        {% for education in form.education %}
                            <div class="ui checkbox three">
                                {{ form_widget(education) }}
                                {{ form_label(education) }}
                            </div>
                        {% endfor %}
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.languages) }}</a>
                    <div class="block">
                        {% for language in form.languages %}
                            <div class="ui checkbox four">
                                {{ form_widget(language) }}
                                {{ form_label(language) }}
                            </div>
                        {% endfor %}
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.religion) }}</a>
                    <div class="block">
                        {% for religion in form.religion %}
                            <div class="ui checkbox three">
                                {{ form_widget(religion) }}
                                {{ form_label(religion) }}
                            </div>
                        {% endfor %}
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.ethnicity) }}</a>
                    <div class="block">
                        {% for ethnicity in form.ethnicity %}
                            <div class="ui checkbox three">
                                {{ form_widget(ethnicity) }}
                                {{ form_label(ethnicity) }}
                            </div>
                        {% endfor %}
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.purposes) }}</a>
                    <div class="block">
                        {% for purpose in form.purposes %}
                            <div class="ui checkbox two">
                                {{ form_widget(purpose) }}
                                {{ form_label(purpose) }}
                            </div>
                        {% endfor %}
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.smoking) }}</a>
                    <div class="block">
                        {% for smoking in form.smoking %}
                            <div class="ui checkbox four">
                                {{ form_widget(smoking) }}
                                {{ form_label(smoking) }}
                            </div>
                        {% endfor %}
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.drinking) }}</a>
                    <div class="block">
                        {% for drinking in form.drinking %}
                            <div class="ui checkbox four">
                                {{ form_widget(drinking) }}
                                {{ form_label(drinking) }}
                            </div>
                        {% endfor %}
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.children) }}</a>
                    <div class="block">
                        <div class="left pair">{{ form_widget(form.children) }}</div>
                        <div class="clear"></div>
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.hobbies) }}</a>
                    <div class="block">
                        {% for hobby in form.hobbies %}
                            <div class="ui checkbox two">
                                {{ form_widget(hobby) }}
                                {{ form_label(hobby) }}
                            </div>
                        {% endfor %}
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.zodiac) }}</a>
                    <div class="block">
                        {% for zodiac in form.zodiac %}
                            <div class="ui checkbox four">
                                {{ form_widget(zodiac) }}
                                {{ form_label(zodiac) }}
                            </div>
                        {% endfor %}
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.loginFrom) }}</a>
                    <div class="block">
                        {% for loginFrom in form.loginFrom %}
                            <div class="ui checkbox three">
                                {{ form_widget(loginFrom) }}
                                {{ form_label(loginFrom) }}
                            </div>
                        {% endfor %}
                    </div>


                    <a class="ui orange big ribbon label">{{ form_label(form.isActive) }}</a>
                    <div class="block">
                        <div class="left pair">{{ form_widget(form.isActive) }}</div>
                        <div class="clear"></div>
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.isFrozen) }}</a>
                    <div class="block">
                        <div class="left pair">{{ form_widget(form.isFrozen) }}</div>
                        <div class="clear"></div>
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.isPaying) }}</a>
                    <div class="block">
                        <div class="left pair">{{ form_widget(form.isPaying) }}</div>
                        <div class="clear"></div>
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.hasPoints) }}</a>
                    <div class="block">
                        <div class="left pair">{{ form_widget(form.hasPoints) }}</div>
                        <div class="clear"></div>
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.isPhoto) }}</a>
                    <div class="block">
                        <div class="left pair">{{ form_widget(form.isPhoto) }}</div>
                        <div class="clear"></div>
                    </div>

                    {#<a class="ui orange big ribbon label">{{ form_label(form.isPhone) }}</a>
                    <div class="block">
                        <div class="left pair">{{ form_widget(form.isPhone) }}</div>
                        <div class="clear"></div>
                    </div>#}





                    <a class="ui orange big ribbon label">{{ form_label(form.startSubscriptionFrom) }}</a>
                    <div class="block">
                        <div class="left pair calendar date_from">{{ form_widget(form.startSubscriptionFrom) }}</div>
                        <div class="left pair"> to-</div>
                        <div class="left pair calendar date_to">{{ form_widget(form.startSubscriptionTo) }}</div>
                        <div class="right pair period">
                            {{ include('backend/users/select_period.html.twig') }}
                        </div>
                        <div class="clear"></div>
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.endSubscriptionFrom) }}</a>
                    <div class="block">
                        <div class="left pair calendar date_from">{{ form_widget(form.endSubscriptionFrom) }}</div>
                        <div class="left pair"> to-</div>
                        <div class="left pair calendar date_to">{{ form_widget(form.endSubscriptionTo) }}</div>
                        <div class="right pair period">
                            {{ include('backend/users/select_period.html.twig') }}
                        </div>
                        <div class="clear"></div>
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.signUpFrom) }}</a>
                    <div class="block">
                        <div class="left pair calendar date_from">{{ form_widget(form.signUpFrom) }}</div>
                        <div class="left pair"> to-</div>
                        <div class="left pair calendar date_to">{{ form_widget(form.signUpTo) }}</div><div class="right pair period">
                            {{ include('backend/users/select_period.html.twig') }}
                        </div>

                        <div class="clear"></div>
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.lastVisitedFrom) }}</a>
                    <div class="block">
                        <div class="left pair calendar date_from">{{ form_widget(form.lastVisitedFrom) }}</div>
                        <div class="left pair"> to-</div>
                        <div class="left pair calendar date_to">{{ form_widget(form.lastVisitedTo) }}</div>
                        <div class="right pair period">
                            {{ include('backend/users/select_period.html.twig') }}
                        </div>
                        <div class="clear"></div>
                    </div>

                    <a class="ui orange big ribbon label">{{ form_label(form.ip) }}</a>
                    <div class="block">
                        <div class="left pair">{{ form_widget(form.ip) }}</div>
                        <div class="clear"></div>
                    </div>





                </div>

                <div class="buttonCont">
                    <div class="ui one column centered grid">
                        {{ form_widget(form.filter) }}
                        <button class="ui red big button" onclick="$(this).siblings('input[type=submit]').click();">Search</button>
                        <input type="submit" class="hidden">
                    </div>
                </div>








            </form>




        </div>


    </div>

    <script>

        var zipCodes = [
            {% for zipCode in zipCodes %}
                { value: '{{ zipCode.name }}', data: '{{ zipCode.id }}' }{% if not loop.last %},{% endif %}
            {% endfor %}
        ];

        $(document).ready(function(){

            $('#zip_code_autocomp').autocomplete({
                lookup: zipCodes,
                onSelect: function (suggestion) {
                    //alert('You selected: ' + suggestion.value + ', ' + suggestion.data);
                    $('#admin_advanced_search_zipCodeSingle').val(suggestion.data);
                }
            });

        });



    </script>




{% endblock %}
