{% extends "frontend/layout.html.twig" %}

{% block title %}{{ parent() }} - {% trans %}Change Password{% endtrans %}{% endblock %}
{% block meta_description %}{% endblock %}

{% block content %}

    <div class="mid_content">
        <div class="wrap">
            <div class="inner_form">
                <div class="inner_form_top" style="padding-left: 30px;">
                    <ul style="display: block;">
                        <li class="active"><span class="ftext profileSpan">{% trans %}Change Password{% endtrans %}</span></li>
                    </ul>
                    <div class="clr"></div>
                </div>
        <form action="{{ app.request.requesturi }}" method="post" class="pass-change">
            <div class="inner_form_bot">
                <div class="main_form">
                    {#<h1>Change Password</h1>#}

                    {% if form.oldPassword.vars.errors|length or form.password.first.vars.errors|length%}
                        <div class="errors">
                            <div class="ui red tiny message">
                                <div class="content">
                                    <div class="header">
                                        {% trans %}Please complete the fields below{% endtrans %}
                                    </div>
                                    <p>
                                        {{ form_errors(form.oldPassword) }}
                                        {{ form_errors(form.password.first) }}
                                    </p>
                                </div>
                            </div>
                        </div>
                        <br><br>
                    {% endif %}


                    {% if changed %}
                        <div class="ui olive tiny message">
                            <div class="content">
                                <div class="header">
                                    {% trans %}New password saved successfully{% endtrans %}
                                </div>
                            </div>
                        </div>
                        <br><br>
                    {% endif %}


                    <div class="mfrm_field cf {% if form.oldPassword.vars.errors|length %}error{% endif %}">
                        <div class="label w_180">{{ form_label(form.oldPassword) }}</div>
                        <div class="inputdiv">{{ form_widget(form.oldPassword) }}</div>
                    </div>

                    <div class="mfrm_field cf {% if form.password.first.vars.errors|length %}error{% endif %}">
                        <div class="label w_180">{{ form_label(form.password.first) }}</div>
                        <div class="inputdiv">{{ form_widget(form.password.first) }}</div>
                    </div>

                    <div class="mfrm_field cf">
                        <div class="label w_180">{{ form_label(form.password.second, null, {'label_attr': {'style': 'line-height:1;'}}) }}</div>
                        <div class="inputdiv">{{ form_widget(form.password.second) }}</div>
                    </div>



                    {{ form_rest(form) }}

                </div>
            </div>


            <input type="submit" id="save_data" class="hidden">


        </form>
            </div>
        </div>

        <div class="clr"></div><input type="button" value="{% trans %}Save{% endtrans %}" class="right" onclick="$('#save_data').click();" style="margin-top: 15px;">

    </div><!-- midsec end -->

    <script>
        function pageInit(){

        }
    </script>
{% endblock %}




{% block mobile_content %}
    <div class="nymain_mobile">
        <div class="mid_content">

        </div>
    </div>
{% endblock %}