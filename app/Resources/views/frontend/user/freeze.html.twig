{% extends "frontend/layout.html.twig" %}

{% block title %}{{ parent() }} - {% trans %}Freeze Account{% endtrans %}{% endblock %}
{% block meta_description %}{% endblock %}

{% block content %}
	<script type="text/javascript">
		function freeze_confirm(){
            textConfirm("{% trans %}Are you sure?{% endtrans %}\r\n{% trans %}Click on 'OK' account will be frozen.{% endtrans %}\r\n{% trans %}To cancel, click on 'Cancel'.{% endtrans %}\r\n{% trans %}You can restart a frozen account at every stage by signing in.{% endtrans %}", "$('#save_data').click();");
			//if(confirm("{% trans %}Are you sure?{% endtrans %}\r\n{% trans %}Click on 'OK' account will be frozen.{% endtrans %}\r\n{% trans %}To cancel, click on 'Cancel'.{% endtrans %}\r\n{% trans %}You can restart a frozen account at every stage by signing in.{% endtrans %}")){ $('#save_data').click(); }
		}
		function freezeAccount(){
            $('#save_data').click();
        }
	</script>

    <div class="mid_content">
        <div class="wrap">
            <div class="inner_form">
                <div class="inner_form_top" style="padding-left: 30px;">
                    <ul style="display: block;">
                        <li class="active"><span class="ftext profileSpan">{% trans %}Freeze Account{% endtrans %}</span></li>
                    </ul>
                    <div class="clr"></div>
                </div>

                <form action="{{ app.request.requesturi }}" method="post">
                    <div class="inner_form_bot">
                        <div class="main_form freeze_cont">
                            {#
                            <p style="font-size: 16px;">
                                {% trans %}
                                Please note: freezing account does not cancel the subscription fee when you already have one. To cancel the subscription fee freeze has yet to send us an email through the contact page, requesting the cancellation of subscription fee.
                                {% endtrans %}
                            </p>
                            #}
                            <textarea style="height:100px; width: 100%;padding: 5px 10px;" id="freeze_account_reason" name="freeze_account_reason" placeholder="{% trans %}The reason for freezing{% endtrans %}"></textarea>
                        </div>
                    </div>

                    <div class="clearfix">
                        <input type="submit" id="save_data" class="hidden">
                    </div>

                </form>
            </div>
        </div>

        <div class="clr"></div><input type="button" value="{% trans %}Freeze{% endtrans %}" class="right" onclick="freeze_confirm();" style="margin-top: 15px;">


